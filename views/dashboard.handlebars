<section>
    <h2>Create New Blog Post</h2>
    <form class="createBlog">
        <div>
            <label for="blog-title">Title:</label>
            <input type="text" id="blog-title" />
        </div>
        <div>
            <label for="post-contents">Blog Description:</label>
            <textarea type="text" id="post-contents"></textarea>
        </div>
        <div>
            <button type="submit">Create Blog</button>
        </div>
    </form>
</section>

{{#if blogs.length}}
<section>
    <h2>Your Blog Posts</h2>
    <ol>
        {{#each blogs as |blog|}}
        <li>
            {{> blog-info blog}}
            <a href="/dashboard/edit/{{blog.id}}">Edit Blog Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-blog.js"></script>